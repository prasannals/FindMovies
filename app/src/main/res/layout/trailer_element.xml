<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/trailer_element_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playTrailerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/play_trailer_icon"/>

    <TextView
        android:id="@+id/trailerTitle"
        android:textSize="@dimen/trailer_element_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Trailer 1"/>

</LinearLayout>